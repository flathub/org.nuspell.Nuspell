{
  "app-id": "org.nuspell.Nuspell",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Locale"
  ],
  "platform-extensions": [
    "org.freedesktop.Platform.Locale"
  ],
  "separate-locales": false,
  "command": "nuspell",
  "finish-args": [
      "--filesystem=home:ro"
   ],
  "cleanup": [
    "/include",
    "/lib/cmake",
    "/lib/pkgconfig"
  ],
  "modules": [
    {
      "name": "launcher",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/metainfo/",
        "cp -f org.nuspell.Nuspell.metainfo.xml /app/share/metainfo/"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.nuspell.Nuspell.metainfo.xml"
        }
      ]
    },
    {
      "name": "nuspell",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_TESTING=OFF",
        "-DBUILD_DOCS=OFF",
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/nuspell/nuspell/archive/refs/tags/v5.1.7.tar.gz",
          "sha256": "9aee944e86924ce44434741cb950fee8f9a6ff9c4f002803ab5f04698c8e4c68"
        }
      ]
    }
  ]
}
